- content_for(:title, @name.to_s)

= turbo_stream_from @name

.text-sm= t(".user")
.mb-5= link_to @name.user

.text-sm= t(".id")
.mb-5= @name.id

.text-sm= t(".created_at")
.mb-5= @name.created_at

.text-sm= t(".updated_at")
.mb-5= @name.updated_at

.text-sm=> t(".name")
.mb-5= @name.name

.text-sm=> t(".verified")
.mb-5= @name.verified

.text-sm=> t(".primary")
.mb-5= @name.primary

= link_to t(".edit"), [:edit, @name]
= button_to t(".delete"), @name, method: :delete, class: "a text-red-600"
