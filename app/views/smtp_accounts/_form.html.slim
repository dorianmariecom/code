- f = local_assigns.fetch(:f)
- removable = local_assigns.fetch(:removable, false)

.smtp-account.border-l-2.border-black.pl-4.mb-5(data-new-record="#{f.object.new_record?}")
  .font-bold.italic= t(".smtp_account")

  - if admin?
    = render "shared/field", f: f, field: :user_id, type: :select, options: user_options(user_id: f.object.user_id)

  = render "shared/field", f: f, field: :primary, type: :checkbox

  - if removable
    = f.hidden_field :_destroy

    button.text-red-600.underline(type="button" data-action="smtp-accounts#remove")
      = t(".remove")

