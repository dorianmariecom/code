- content_for(:title, @user)

- if @user.admin?
  p.font-bold= t(".admin")

.text-sm= t(".id")
.mb-5= @user.id

- if @user.time_zone.present?
  .text-sm= t(".time_zone")
  .mb-5= @user.time_zone

p.text-sm= link_to t(".email_addresses"), [@user, :email_addresses]

p= link_to t(".new_email_address"), new_email_address_path

= render @email_addresses

p.text-sm= link_to t(".passwords"), [@user, :passwords]

p= link_to t(".new_password"), new_password_path

= render @passwords

p.text-sm= link_to t(".programs"), [@user, :programs]

p= link_to t(".new_program"), new_program_path

= render @programs

= link_to t(".edit"), [:edit, @user]

= button_to t(".destroy"), @user, method: :delete, class: "a text-red-600", data: { turbo_confirm: t(".confirm") }
