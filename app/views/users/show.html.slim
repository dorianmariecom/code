  p.font-bold= link_to t(".twitter_accounts", count: @twitter_accounts.size), [@user, :twitter_accounts]

  .p= button_to t(".new_twitter_account"), new_twitter_account_path, method: :get, class: "bg-black text-white rounded px-2 py-1 cursor:pointer"

