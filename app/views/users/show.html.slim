  .p= button_to t(".new_password"), new_password_path, method: :get, class: "bg-black text-white rounded px-2 py-1 cursor:pointer"

  = render partial: "passwords/password", collection: @passwords, as: :password

.border-l-2.border-black.pl-4.mb-5
  p.font-bold= link_to t(".programs", count: @programs.size), [@user, :programs]

  .p= button_to t(".new_program"), new_program_path, method: :get, class: "bg-black text-white rounded px-2 py-1 cursor:pointer"

  = render partial: "programs/program", collection: @programs, as: :program
