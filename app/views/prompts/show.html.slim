- content_for(:title, @prompt.to_s)

= turbo_stream_from @prompt

.text-sm= t(".user")
.mb-5= link_to @prompt.user

.text-sm= t(".program")
.mb-5= link_to @prompt.program

.text-sm= t(".id")
.mb-5= @prompt.id

.text-sm= t(".created_at")
.mb-5= @prompt.created_at

.text-sm= t(".updated_at")
.mb-5= @prompt.updated_at

- if @prompt.prompt.present?
  .text-sm=> t(".prompt")
  pre.mt-0= @prompt.prompt

- if @prompt.input.present?
  .text-sm=> t(".input")
  pre.mt-0= @prompt.input

= button_to t(".delete"), @prompt, method: :delete, class: "a text-red-600"

